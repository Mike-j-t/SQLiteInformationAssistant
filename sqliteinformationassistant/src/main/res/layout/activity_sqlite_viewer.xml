<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dbv_entire_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/dbv_heading_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/dbv_heading_text"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:text="MyTitle"/>
        <Button
            android:id="@+id/dbv_donebutton"
            style="@style/buttons"
            />
        <Button
            android:id="@+id/dbv_prevbutton"
            style="@style/buttons"
            android:visibility="invisible"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/dbv_workarea_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="90"
        android:background="#FF9999ff"
        android:padding="5dp"
        >
        <LinearLayout
            android:id="@+id/dbv_leftworkarea_layout"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="10"
            android:layout_height="match_parent"
            android:background="#FF99FF99">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/dbv_left_listview_heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <ListView
                    android:id="@+id/dbv_left_listview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </ListView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/dbv_rightworkarea_layout"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="10"
            android:layout_height="match_parent"
            android:background="#FFFF9999"
            >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/dbv_right_listview_heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <ListView
                    android:id="@+id/dbv_right_listview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </ListView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/dbv_bottom_listview_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFAAFFFF"/>

    <LinearLayout
        android:id="@+id/footer_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50"
        android:background="#FFAAFFFF"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/dbv_bottom_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </ListView>
    </LinearLayout>
</LinearLayout>

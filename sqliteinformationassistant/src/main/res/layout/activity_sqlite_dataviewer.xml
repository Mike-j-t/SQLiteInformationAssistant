<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/ddv_heading"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/ddv_done"
            style="@style/buttons"
            android:text="@string/done_button_text"/>
    </LinearLayout>
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/ddv_hdgtext1"
                    style="@style/datatextview"/>
                <TextView
                    android:id="@+id/ddv_hdgtext2"
                    style="@style/datatextview"/>
                <TextView
                    android:id="@+id/ddv_hdgtext3"
                    style="@style/datatextview"/>
                <TextView
                    android:id="@+id/ddv_hdgtext4"
                    style="@style/datatextview"/>
                <TextView
                    android:id="@+id/ddv_hdgtext5"
                    style="@style/datatextview"/>
                <TextView
                    android:id="@+id/ddv_hdgtext6"
                    style="@style/datatextview"/>
                <TextView
                    android:id="@+id/ddv_hdgtext7"
                    style="@style/datatextview"/>
                <TextView
                    android:id="@+id/ddv_hdgtext8"
                    style="@style/datatextview"/>
                <TextView
                    android:id="@+id/ddv_hdgtext9"
                    style="@style/datatextview"/>
                <TextView
                    android:id="@+id/ddv_hdgtext10"
                    style="@style/datatextview"/>
                <TextView
                    android:id="@+id/ddv_hdgtext11"
                    style="@style/datatextview"/>
                <TextView
                    android:id="@+id/ddv_hdgtext12"
                    style="@style/datatextview"/>
                <TextView
                    android:id="@+id/ddv_hdgtext13"
                    style="@style/datatextview"/>
                <TextView
                    android:id="@+id/ddv_hdgtext14"
                    style="@style/datatextview"/>
                <TextView
                    android:id="@+id/ddv_hdgtext15"
                    style="@style/datatextview"/>
            </LinearLayout>
            <ListView
                android:id="@+id/ddv_datalistview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </ListView>
        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>